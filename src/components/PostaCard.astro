---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
    id: string;
    name: string;
    address: string;
    phone: string;
    hours: string;
    manager: string;
    managerTitle: string;
    image: ImageMetadata;
    mapUrl: string;
}

const {
    id,
    name,
    address,
    phone,
    hours,
    manager,
    managerTitle,
    image,
    mapUrl,
} = Astro.props;
---

<article class="posta-card" id={id}>
    <div class="card-image">
        <Image src={image} alt={name} class="cover-image" />
    </div>
    <div class="card-content">
        <h3>{name}</h3>

        <div class="info-group">
            <span class="icon">üìç</span>
            <p>{address}</p>
        </div>

        <div class="info-group">
            <span class="icon">üïí</span>
            <p>{hours}</p>
        </div>

        <div class="info-group">
            <span class="icon">üìû</span>
            <p>{phone}</p>
        </div>

        <div class="staff-info">
            <div class="staff-item">
                <strong>{managerTitle}:</strong>
                <span>{manager}</span>
            </div>
        </div>

        <div class="map-embed">
            <iframe
                src={mapUrl}
                width="100%"
                height="200"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</article>

<style>
    .posta-card {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--shadow-md);
        display: flex;
        flex-direction: column;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .posta-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .card-image {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

    .cover-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .posta-card:hover .cover-image {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    h3 {
        color: var(--color-primary);
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .info-group {
        display: flex;
        gap: 0.75rem;
        align-items: flex-start;
    }

    .icon {
        font-size: 1.1rem;
        margin-top: 0.1rem;
    }

    .info-group p {
        margin: 0;
        color: #4b5563;
        font-size: 0.95rem;
    }

    .staff-info {
        background-color: var(--color-bg-alt);
        padding: 1rem;
        border-radius: 0.5rem;
        margin-top: 0.5rem;
    }

    .staff-item {
        display: flex;
        flex-direction: column;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .staff-item strong {
        color: var(--color-secondary);
    }

    .map-embed {
        margin-top: 1rem;
        border-radius: 0.5rem;
        overflow: hidden;
    }
</style>
