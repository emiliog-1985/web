    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>`,
        title: "Trato Respetuoso",
        desc: "Tratar respetuosamente al personal de salud.",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>`,
        title: "Información Veraz",
        desc: "Entregar información veraz acerca de su identidad, dirección y enfermedad.",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>`,
        title: "Cuidar Instalaciones",
        desc: "Cuidar las instalaciones y equipamiento del recinto.",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`,
        title: "Cumplir Horarios",
        desc: "Conocer y cumplir el reglamento interno y horarios.",
    },
];
---

<section class="rights-duties-section">
    <div class="container">
        <div class="section-header text-center">
            <h2 class="section-title">Derechos y Deberes de los Pacientes</h2>
            <p class="section-subtitle">
                Ley N° 20.584 - Conoce tus derechos y responsabilidades en la
                atención de salud.
            </p>
            <a
                href="/derechos_y_deberes.pdf"
                target="_blank"
                class="btn btn-primary mt-4">Ver Carta de Derechos y Deberes</a
            >
        </div>

        <!-- Derechos -->
        <div class="category-block">
            <h3 class="category-title rights-title">Derechos</h3>
            <div class="grid cards-grid">
                {
                    rights.map((item) => (
                        <div class="institutional-card">
                            <div class="card-icon" set:html={item.icon} />
                            <div class="card-content">
                                <h4>{item.title}</h4>
                                <p>{item.desc}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Deberes -->
        <div class="category-block mt-large">
            <h3 class="category-title duties-title">Deberes</h3>
            <div class="grid cards-grid">
                {
                    duties.map((item) => (
                        <div class="institutional-card duty-card">
                            <div class="card-icon" set:html={item.icon} />
                            <div class="card-content">
                                <h4>{item.title}</h4>
                                <p>{item.desc}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
