<style>
    .badge-pionera {
        display: inline-block;
        background-color: var(--color-accent);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        margin-bottom: 1rem;
        letter-spacing: 0.05em;
        box-shadow: 0 4px 6px rgba(245, 158, 11, 0.4);
    }

    .aps-features {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 2rem;
    }

    .feature-item {
        background-color: #f0f9ff;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        color: #0369a1;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .feature-item.highlight {
        background-color: #ecfdf5;
        color: #047857;
        border: 1px solid #10b981;
    }

    .check-icon {
        font-weight: 900;
    }

    .aps-logo-floating {
        width: 100%;
        max-width: 280px;
        height: auto;
        filter: drop-shadow(0 10px 15px rgba(0, 0, 0, 0.1));
        animation: floatLogo 4s ease-in-out infinite;
    }

    @keyframes floatLogo {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    .card-intro {
        font-size: 1.05rem;
        margin-bottom: 1.5rem;
        color: #4b5563;
        font-style: italic;
    }

    .full-width-card {
        background: linear-gradient(to right, #ffffff, #eff6ff);
        border-left: 5px solid var(--color-primary);
        margin-top: 3rem;
    }
    .card-content-fl {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
    }
    @media (max-width: 768px) {
        .card-content-fl {
            flex-direction: column-reverse;
            text-align: center;
        }
        .aps-features {
            justify-content: center;
        }
    }
</style>
