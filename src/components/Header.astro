---
import logo from "../assets/disam-04-25P.png";
import headerTransparenciaInfo from "../assets/header_transparencia_info.png";
import headerTransparenciaActiva from "../assets/header_transparencia_activa.png";
import headerLobby from "../assets/header_lobby.png";
import headerOirs from "../assets/header_oirs.png";
---

<header class="header">
    <div class="top-bar">
        <div class="container top-bar-content">
            <a
                href="https://www.portaltransparencia.cl/PortalPdT/pdttetramite?codOrganismo=OR116"
                target="_blank"
            >
                <img
                    src={headerTransparenciaInfo.src}
                    alt="Solicitar Información Ley de Transparencia"
                    class="top-bar-icon"
                />
            </a>
            <a
                href="https://www.portaltransparencia.cl/PortalPdT/directorio-de-organismos-regulados/?org=OR116"
                target="_blank"
            >
                <img
                    src={headerTransparenciaActiva.src}
                    alt="Transparencia Activa"
                    class="top-bar-icon"
                />
            </a>
            <a href="https://www.leylobby.cl/institucion/418" target="_blank">
                <img
                    src={headerLobby.src}
                    alt="Ley del Lobby"
                    class="top-bar-icon"
                />
            </a>
            <a href="https://oirs.minsal.cl/" target="_blank">
                <img src={headerOirs.src} alt="OIRS" class="top-bar-icon" />
            </a>
            <a
                href="https://saludmuniarica.cl/postulacion/conv.php"
                class="btn btn-primary btn-sm">Postulación</a
            >
        </div>
    </div>

    <div class="main-header">
        <div class="container header-inner">
            <a href="/" class="logo">
                <img src={logo.src} alt="Logo" />
            </a>

            <nav class="desktop-nav">
                <ul class="nav-list">
                    <li><a href="/" class="nav-link">Inicio</a></li>
                    <li class="dropdown">
                        <a href="#" class="nav-link">Centros de Salud ▼</a>
                        <ul class="dropdown-menu">
                            <li><a href="/cesfam">CESFAM</a></li>
                            <li><a href="/cecosf">CECOSF</a></li>
                            <li><a href="/postas">Postas Rurales</a></li>
                            <li>
                                <a href="/urgencias">Urgencias (SAPU/SAR)</a>
                            </li>
                            <li><a href="/farmacia">Farmacia Municipal</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="nav-link">Iniciativas ▼</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a
                                    href="https://www.youtube.com/@disamarica"
                                    target="_blank">PodCast</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://www.instagram.com/disam.arica/?hl=es"
                                    target="_blank">Instagram</a
                                >
                            </li>
                            <li>
                                <a
                                    href="https://www.facebook.com/disam.arica"
                                    target="_blank">Facebook</a
                                >
                            </li>
                            <li>
                                <a href="/aps-universal">APS Universal</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="/derechos-deberes" class="nav-link"
                            >Derechos y Deberes</a
                        >
                    </li>
                    <li>
                        <a href="/oficina-disam" class="nav-link"
                            >Departamentos</a
                        >
                    </li>
                    <li>
                        <a href="https://telesalud.gob.cl/" class="nav-link"
                            >Telesalud</a
                        >
                    </li>
                </ul>
            </nav>
        </div>

        <button id="mobile-menu-toggle" aria-label="Abrir menú">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="3" y1="12" x2="21" y2="12"></line><line
                    x1="3"
                    y1="6"
                    x2="21"
                    y2="6"></line><line x1="3" y1="18" x2="21" y2="18"
                ></line></svg
            >
        </button>
    </div>
</header>

<div id="mobile-menu" class="mobile-menu hidden">
    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="#">Centros de Salud</a></li>
            <li><a href="#">Departamentos</a></li>
            <li><a href="#">Noticias</a></li>
            <li><a href="#">Contacto</a></li>
        </ul>
    </nav>
</div>

<script>
    const toggle = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");

    if (toggle && menu) {
        toggle.addEventListener("click", () => {
            menu.classList.toggle("hidden");
            menu.classList.toggle("open");
        });
    }
</script>
