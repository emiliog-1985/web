---
import UrgenciaCard from "./UrgenciaCard.astro";
import { urgencias } from "../data/urgencias";
---

<section class="section-urgencias" id="urgencias">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Urgencias (SAPU y SAR)</h2>
            <p class="section-subtitle">Atenci√≥n de urgencia primaria</p>
        </div>

        <div class="urgencias-grid">
            {
                urgencias.map((center) => (
                    <UrgenciaCard
                        id={center.id}
                        name={center.name}
                        type={center.type}
                        address={center.address}
                        phone={center.phone}
                        hours={center.hours}
                        director={center.director}
                        coordinator={center.coordinator}
                        image={center.image}
                        mapUrl={center.mapUrl}
                    />
                ))
            }
        </div>
    </div>
</section>

<style>
    .section-urgencias {
        padding: 4rem 0;
        background-color: var(--color-bg);
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: 2.5rem;
        color: var(--color-primary);
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        color: var(--color-text-light);
        font-size: 1.125rem;
    }

    .urgencias-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }
</style>
